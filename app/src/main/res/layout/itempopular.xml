<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_rectangle_20_fff"
    android:layout_width="215dp"
    android:elevation="5dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="20dp"
    android:layout_height="278dp">

    <RelativeLayout
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:background="@drawable/shape_rectangle_4_fff"
        android:backgroundTint="@color/purple_500"
        android:paddingVertical="2dp">

        <TextView
            android:id="@+id/popularcat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Pedas"
            android:textColor="@color/white"
            android:textSize="10dp" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:layout_width="175dp"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/popularimage"
            android:layout_width="175dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/makaroni9" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/popularName"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:text="Makaroni Slurrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/popularPrice"
            android:textColor="@color/purple_500"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="14dp"
            android:text="IDR. 25.000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>