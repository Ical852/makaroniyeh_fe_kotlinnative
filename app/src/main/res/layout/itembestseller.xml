<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_rectangle_8_fff"
    android:layout_width="match_parent"
    android:elevation="5dp"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="20dp"
    android:layout_height="205dp"
    android:id="@+id/bestSellerId">

    <androidx.cardview.widget.CardView
        android:outlineProvider="none"
        app:cardCornerRadius="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="92dp">

        <ImageView
            android:outlineProvider="none"
            android:id="@+id/bestSellerimage"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/makaroni1" />

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_marginStart="8dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:background="@drawable/shape_rectangle_4_fff"
        android:backgroundTint="@color/purple_500"
        android:paddingVertical="2dp">

        <TextView
            android:id="@+id/bestSellercat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Pedas"
            android:textColor="@color/white"
            android:textSize="10dp" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bestSellerName"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:text="Makaroni Pedas Mantap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/bestSellerPrice"
            android:textColor="@color/purple_500"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="14dp"
            android:text="IDR. 25.000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>